{
  "extends": ["config:base"],

  "ignorePaths": [
    ".github/workflows/*"
  ],

  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPaths": [
        "portainer/terraform/compose/*.yml"
      ],
      "matchManagers": ["docker-compose"],
      "groupName": "Docker Compose Services",
      "enabled": true
    },
    {
      "matchPaths": [
        "cloudflare/terraform/*.tf",
        "portainer/terraform/*.tf"
      ],
      "groupName": "Terraform Providers",
      "enabled": true
    }
  ]
}